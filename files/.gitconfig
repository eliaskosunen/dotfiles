[credential]
    helper = cache --timeout=7200
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff

[color]
    branch = auto
    diff = auto
    status = auto
    showbranch = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

